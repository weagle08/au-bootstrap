{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "target": "es2017",
        "module": "amd",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}